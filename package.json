  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js -w server/ -w wrapper.blocks/  -w desktop.blocks/ -w desktop.bundles/index/index.bemdecl.js",
    "production": "cd configs && ln -snf production current && cd .. && YENV=production enb make --no-cache && NODE_ENV=production npm start",
