block('comment')(
    js()(true),
    match(function () { return this.ctx.issueNumber; }).js()(function () {
        var ctx = this.ctx;

        return {
            issueNumber: ctx.issueNumber,
            id: ctx.data.id,
            forumUrl: ctx.forumUrl,
            csrf: ctx.csrf
        }
    }),
    mix()([
        { block: 'forum-flex' },
        { block: 'comments', elem: 'item' }
    ])
);
