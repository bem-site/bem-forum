block('forum-issues')(
    match(function () { return this._forum.issues; }).content()(function () {
        var forum = this._forum,
            issues = forum.issues;

        return issues.length ? issues.map(function (issue) {
            return {
                block: 'issue',
                mods: { solved: issue.state === 'closed' },
                issue: issue
            }
        }) : {
            elem: 'error',
            elemMods: { view: 'labels' }
        };
    })
);
