.forum
{
    height: 100%;
    font-size: 14px;
    line-height: 1.7;

    blockquote
    {
        position: relative;
        margin: 0 0 15px 0;
        background: $color-grey-light;
        padding: 11px 15px 10px 45px;
        border-radius: 3px;

        &:before
        {
            content: '';
            position: absolute;
            top: 10px;
            left: 10px;
            width: 25px;
            height: 25px;
            @extend .icon;
            @extend .icon_view_quote;
            background-size: 25px;
            opacity: .2;
        }

        p
        {
            margin-top: 0;
            color: #999;
        }
    }

    hr
    {
        height: 4px;
        margin: 15px 0;
        padding: 0;

        color: #ccc;
        border: 0 none;
        background: url('data:image/png;base64,') repeat-x 0 0;
    }

    :link,
    :visited
    {
        transition: opacity .15s ease-out;
        color: $color-link;
    }

    :link:hover,
    :visited:hover
    {
        opacity: .5;
    }

    .link
    {
        cursor: pointer;
    }
}
