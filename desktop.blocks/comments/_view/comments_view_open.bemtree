block('comments').mod('view', 'open')(

    content()(function () {
        return [
            { elem: 'container' },
            applyNext()
        ];
    }),

    elem('container')(
        content()(function () {
            return this.forum.comments.map(function (comment) {
                return {
                    block: 'comment',
                    comment: comment
                }
            })
        })
    )
);
